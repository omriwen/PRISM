{
  "permissions": {
    "allow": [
      "mcp__fetch__*",
      "mcp__sequential-thinking__*",
      "mcp__memory__*"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/validate_python_hook.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format_python_hook.sh"
          }
        ]
      }
    ]
  }
}
